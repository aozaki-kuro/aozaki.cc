{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#components/*": ["src/components/*"],
      "#images/*": ["public/images/*"],
      "#data/*": ["data/*"]
    },
    "types": ["node", "astro/client"],
    "strict": true
  },
  "include": ["src", "**/*.ts", "**/*.astro"],
  "exclude": ["node_modules"]
}
